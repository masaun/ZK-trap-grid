'use client';

import React, { createContext, useContext, useState, useEffect, ReactNode } from 'react';
import { StellarWalletKit, NetworkType } from 'stellar-wallet-kit';
import { CONTRACT_CONFIG } from '@/lib/config';

interface WalletContextType {
  kit: StellarWalletKit | null;
  publicKey: string | null;
  isConnected: boolean;
  isConnecting: boolean;
  error: string | null;
  connectWallet: () => Promise<void>;
  disconnectWallet: () => Promise<void>;
  signTransaction: (xdr: string) => Promise<string>;
}

const WalletContext = createContext<WalletContextType | undefined>(undefined);

export function useWallet() {
  const context = useContext(WalletContext);
  if (!context) {
    throw new Error('useWallet must be used within WalletProvider');
  }
  return context;
}

interface WalletProviderProps {
  children: ReactNode;
}

export function WalletProvider({ children }: WalletProviderProps) {
  const [kit, setKit] = useState<StellarWalletKit | null>(null);
  const [publicKey, setPublicKey] = useState<string | null>(null);
  const [isConnecting, setIsConnecting] = useState(false);
  const [error, setError] = useState<string | null>(null);

  useEffect(() => {
    // Initialize Stellar Wallet Kit
    const initKit = async () => {
      try {
        // Determine network based on config
        let network: NetworkType;
        if (CONTRACT_CONFIG.networkPassphrase.includes('Standalone')) {
          network = NetworkType.STANDALONE;
        } else if (CONTRACT_CONFIG.networkPassphrase.includes('Test')) {
          network = NetworkType.TESTNET;
        } else {
          network = NetworkType.PUBLIC;
        }

        const walletKit = new StellarWalletKit({
          network,
          selectedWalletId: 'freighter', // Default to Freighter
          modules: [
            // Wallet modules will be auto-detected
          ],
        });

        setKit(walletKit);

        // Check if already connected
        const storedPublicKey = localStorage.getItem('stellar_wallet_public_key');
        if (storedPublicKey) {
          setPublicKey(storedPublicKey);
        }
      } catch (err) {
        console.error('Failed to initialize wallet kit:', err);
        setError('Failed to initialize wallet');
      }
    };

    if (typeof window !== 'undefined') {
      initKit();
    }
  }, []);

  const connectWallet = async () => {
    if (!kit) {
      setError('Wallet kit not initialized');
      return;
    }

    setIsConnecting(true);
    setError(null);

    try {
      // Open wallet modal
      await kit.openModal({
        onWalletSelected: async (option) => {
          try {
            // Set the selected wallet
            kit.setWallet(option.id);
            
            // Get public key
            const { address } = await kit.getAddress();
            
            setPublicKey(address);
            localStorage.setItem('stellar_wallet_public_key', address);
            
            console.log('Wallet connected:', address);
          } catch (err) {
            console.error('Error connecting to wallet:', err);
            setError('Failed to connect wallet');
          }
        },
      });
    } catch (err) {
      console.error('Error opening wallet modal:', err);
      setError('Failed to open wallet selection');
    } finally {
      setIsConnecting(false);
    }
  };

  const disconnectWallet = async () => {
    setPublicKey(null);
    localStorage.removeItem('stellar_wallet_public_key');
    
    // Reset wallet kit
    if (kit) {
      // The kit doesn't have a disconnect method, so we just clear our state
      console.log('Wallet disconnected');
    }
  };

  const signTransaction = async (xdr: string): Promise<string> => {
    if (!kit || !publicKey) {
      throw new Error('Wallet not connected');
    }

    try {
      const { signedTxXdr } = await kit.signTransaction(xdr, {
        address: publicKey,
        networkPassphrase: CONTRACT_CONFIG.networkPassphrase,
      });

      return signedTxXdr;
    } catch (err) {
      console.error('Error signing transaction:', err);
      throw new Error('Failed to sign transaction');
    }
  };

  const value: WalletContextType = {
    kit,
    publicKey,
    isConnected: !!publicKey,
    isConnecting,
    error,
    connectWallet,
    disconnectWallet,
    signTransaction,
  };

  return (
    <WalletContext.Provider value={value}>
      {children}
    </WalletContext.Provider>
  );
}
